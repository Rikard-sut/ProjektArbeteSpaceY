@model SpaceyWebbApp.Models.Destination

@{
    ViewData["Title"] = "Add destination";
}

<h1>Add destination</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpeditionRange" class="control-label"></label>
                <select asp-for="ExpeditionRange" asp-items="Html.GetEnumSelectList<FlightLength>()" class="form-control"></select>
                <span asp-validation-for="ExpeditionRange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Range from earth</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/destinations/destination.get.js"></script>
    <script src="~/js/destinations/destination.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
