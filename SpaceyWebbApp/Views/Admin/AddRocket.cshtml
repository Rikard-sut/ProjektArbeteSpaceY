@model SpaceyWebbApp.Models.Rocket
@using SpaceyWebbApp.Models;

@{
    ViewData["Title"] = "Add rocket";
}

<h1>Add rocket</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Range" class="control-label"></label>
                <select asp-for="Range" asp-items="Html.GetEnumSelectList<FlightLength>()" class="form-control"></select>
                <span asp-validation-for="Range" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seats" class="control-label"></label>
                <select asp-for="Seats" class="form-control">
                    @foreach (var item in Enum.GetValues(typeof(FlightLength)))
                    {
                        <option value="@Convert.ToInt32(item)">@Convert.ToInt32(item)</option>
                    }
                </select>
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/rockets/rocket.post.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
