@model SpaceyWebbApp.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "FinalBookingStage";
}

<body id="booking-index">
    <h1>FinalBookingStage</h1>
    <form asp-action="FinalBookingStage">
        @for (int i = 0; i < Model.SeatsToBook.Length; i++)
        {
            <div>
                <input asp-for="Customers[i].SeatNumber" value="@Model.SeatsToBook[i]" hidden />
            </div>
            <div>
                <input asp-for="Customers[i].ExpeditionId" value="@Model.Expedition.ExpeditionId" hidden />
            </div>
            <div class="form-group">
                <label asp-for="Customers[i].FullName">Full name</label>
                <input asp-for="Customers[i].FullName" placeholder="Rikard Skoglund" required /> <p>for seat @Model.SeatsToBook[i]</p>
            </div>
        }
        <div class="form-group">
            <input type="submit" value="Confirm Booking!" class="btn btn-primary" />
        </div>
    </form>
</body>

