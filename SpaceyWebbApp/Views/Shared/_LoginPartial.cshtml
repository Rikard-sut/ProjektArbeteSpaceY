@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
    


    
<div class="fixed-bottom" style="max-width: 50px;">
    <a style="max-width: 50px;" class="nav-link text-white" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" role="button" href="#">Admin</a>
    <div class="dropdown-menu align-content-lg-end text-center" aria-labelledby="navbarDropdown">
        @if (SignInManager.IsSignedIn(User))
        {
            <a id="manage" class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Index" title="Dashboard">Dashboard</a>
            <a id="manage" class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">My profile</a>
            <a class="dropdown-item" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="dropdown-item btn btn-link">Logout</button>
            </form>
        }
        else
        {
            <a class="dropdown-item bg-transparent" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        }
    </div>
</div>
   

   
