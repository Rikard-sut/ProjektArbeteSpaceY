@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
    
        <ul class="navbar-nav mr-4 my-2">
            @if (SignInManager.IsSignedIn(User))
            {
                <li class="nav-item dropdown">
                    <a class="nav-link text-white" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <h2 class="d-inline-flex"><i class="fas fa-bars"></i></h2>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <a id="manage" class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Index" title="Dashboard">Dashboard</a>
                        <a id="manage" class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">My profile</a>
                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button id="logout" type="submit" class="dropdown-item btn btn-link">Logout</button>
                        </form>
                    </div>
                </li>
            }
            else
            {
                <li class="nav-item dropdown">
                    <a class="nav-link text-white" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <h2 class="d-inline-flex"><i class="fas fa-bars"></i></h2>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        <a class="dropdown-item" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </div>
                </li>                
                
            }
        </ul>

