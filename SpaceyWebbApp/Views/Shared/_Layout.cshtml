<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SpaceyWebbApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Audiowide&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/719b82a84d.js" crossorigin="anonymous"></script>
</head>
<body id="background-image">
    <header>
        <nav id="header-field" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="navbar-container">
                <div id="navbar-logo">
                    <a id="navbar-logo-text" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SPACEY</a>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" id="navbar-dropdown">
                    <a>Login</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer-container">
            <div id="copy-right">&copy; 2020</div>
            <div id="footer-middle-div"><a class="nav-link text-dark" asp-area="" asp-controller="AddExpeditions" asp-action="Index">Add Expeditions</a></div>
            <div id="socials">
                <a><i class="fab fa-facebook-square"></i></a>
                <a><i class="fab fa-instagram-square"></i></a>
                <a><i class="fab fa-twitter-square"></i></a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>