@model SpaceyWebbApp.Models.Destination

@{
    ViewData["Title"] = "AddDestination";
}

<h1>AddDestination</h1>

<h4>Destination</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDestination">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="expeditionRange" class="control-label"></label>
                <select asp-for="expeditionRange" asp-items="Html.GetEnumSelectList<FlightLength>()" class="form-control"></select>
                <span asp-validation-for="expeditionRange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
